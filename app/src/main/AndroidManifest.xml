<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amit_pc.demoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.amit_pc.demoapp.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.PlayMusicActivity"
            android:launchMode="singleInstance"></activity>
        <activity android:name=".activity.ForegroundServiceExampleActvity"/>
        <activity android:name=".activity.BoundedServiceExampleActivity"/>
        <activity android:name=".activity.LaunchModesExampleActivity" android:launchMode="standard"/>

        <service android:name=".service.MyService" />
        <service android:name=".service.ForegroundService" />
        <service android:name=".service.BoundService"/>
    </application>

</manifest>